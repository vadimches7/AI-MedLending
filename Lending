    <div class="social-proof" id="socialProof">
        <div class="social-proof-close" onclick="closeSocialProof()">√ó</div>
        <div class="social-proof-header">
            <div class="social-proof-avatar">–ö–ë</div>
            <div class="social-proof-name">–ö–ª–∏–Ω–∏–∫–∞ "–ë—å—é—Ç–∏"</div>
        </div>
        <p class="social-proof-text">
            –¢–æ–ª—å–∫–æ —á—Ç–æ –∑–∞–ø–∏—Å–∞–ª–∞—Å—å –Ω–∞ –¥–µ–º–æ AI-—Å–∏—Å—Ç–µ–º—ã –∏–∑ –ú–æ—Å–∫–≤—ã
        </p>
    </div>

    <script>
        // ROI Calculator
        function calculate() {
            const currentCost = parseInt(document.getElementById('currentCost').value) || 150000;
            const currentPatients = parseInt(document.getElementById('currentPatients').value) || 10;
            const avgCheck = parseInt(document.getElementById('avgCheck').value) || 500000;
            const budget = parseInt(document.getElementById('budget').value) || 1000000;
            
            const newCost = Math.round(currentCost * 0.1); // 90% reduction
            const newPatients = Math.round(budget / newCost);
            const additionalPatients = newPatients - currentPatients;
            const yearProfit = additionalPatients * avgCheck * 12 * 0.3; // 30% margin
            
            document.getElementById('newCost').textContent = (newCost / 1000).toFixed(0) + ' 000‚ÇΩ';
            document.getElementById('newPatients').textContent = newPatients;
            document.getElementById('profit').textContent = '+' + (yearProfit / 1000000).toFixed(1) + '–ú‚ÇΩ';
        }
        
        // FAQ Toggle
        function toggleFaq(item) {
            item.classList.toggle('active');
        }
        
        // Form Submit
        function handleSubmit(event) {
            event.preventDefault();
            // Redirect to Telegram
            window.open('https://t.me/your_bot', '_blank');
        }
        
        // Play Video
        function playVideo() {
            alert('–ó–¥–µ—Å—å –±—É–¥–µ—Ç –≤–∏–¥–µ–æ –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏—è');
        }
        
        // Social Proof Popup
        const names = ['–ö–ª–∏–Ω–∏–∫–∞ "–≠—Å—Ç–µ—Ç–∏–∫–∞"', '–ú–µ–¥–¶–µ–Ω—Ç—Ä "–ü—Ä–µ–º–∏—É–º"', '–î–æ–∫—Ç–æ—Ä –ò–≤–∞–Ω–æ–≤–∞', '–ö–ª–∏–Ω–∏–∫–∞ "–ó–¥–æ—Ä–æ–≤—å–µ"'];
        const cities = ['–°–∞–Ω–∫—Ç-–ü–µ—Ç–µ—Ä–±—É—Ä–≥–∞', '–ï–∫–∞—Ç–µ—Ä–∏–Ω–±—É—Ä–≥–∞', '–ù–æ–≤–æ—Å–∏–±–∏—Ä—Å–∫–∞', '–ö–∞–∑–∞–Ω–∏'];
        let popupIndex = 0;
        
        function showSocialProof() {
            const popup = document.getElementById('socialProof');
            const name = names[popupIndex % names.length];
            const city = cities[popupIndex % cities.length];
            
            popup.querySelector('.social-proof-name').textContent = name;
            popup.querySelector('.social-proof-text').textContent = 
                `–¢–æ–ª—å–∫–æ —á—Ç–æ –∑–∞–ø–∏—Å–∞–ª–∞—Å—å –Ω–∞ –¥–µ–º–æ AI-—Å–∏—Å—Ç–µ–º—ã –∏–∑ ${city}`;
            popup.querySelector('.social-proof-avatar').textContent = 
                name.split(' ')[0].substring(0, 2).toUpperCase();
            
            popup.classList.add('show');
            popupIndex++;
            
            setTimeout(() => {
                popup.classList.remove('show');
            }, 5000);
        }
        
        function closeSocialProof() {
            document.getElementById('socialProof').classList.remove('show');
        }
        
        // Show social proof every 30 seconds
        setTimeout(() => {
            showSocialProof();
            setInterval(showSocialProof, 30000);
        }, 10000);
        
        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Initial calculation
        calculate();
    </script>
</body>
</html>
